@model Kheech.Web.Models.InviteFriend

<div>@TempData["InviteMessage"]</div>

<form action="@Url.RouteUrl("InviteAFriendPost")" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Kheech Invitation</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-12 control-label" })
            <div class="col-sm-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </fieldset>
</form>
