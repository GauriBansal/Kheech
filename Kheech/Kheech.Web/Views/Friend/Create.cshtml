@model Kheech.Web.Models.InviteFriend

@if (@TempData["InviteMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["InviteMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form action="@Url.RouteUrl("InviteAFriendPost")" method="post" class="form-control form-container">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Invitation to Join Kheech</legend><hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-12 control-label" })
            <div class="col-12">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-6">
                <button type="submit" class="btn btn-success btn-sm">Send invitation</button>
            </div>
        </div>
    </fieldset>
</form>
