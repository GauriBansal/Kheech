@using Humanizer
@model IEnumerables<Kheech.Web.Models.Moment>

<div class="container">
  <div class="row">
    @foreach (var moment in Model)
    {
      <div class="col-sm-4 card">
        <img class="card-img-top" src="@moment.Capture" alt="@moment.KheechEvent.EventName">
        <div class="card-body">
          <p>Relive the Kheech 
            <a href="#" class="card-title btn btn-primary">
               @moment.KheechEvent.EventName at @moment.KheechEvent.Location.Name on @moment.KheechEvent.StartDate.Humanize()
            </a>
          </p>
        </div>
      </div>
    }
  </div>
</div>
