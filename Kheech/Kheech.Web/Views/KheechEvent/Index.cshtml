@using Humanizer
@model Kheech.Web.ViewModels.KheechIndexViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="jumbotron">
        @if (Model.ActiveKheechEvents.Count() == 0)
        {
            <p>@ViewBag.Message</p>
        }
        else
        {
            <ul class="row">
                You have a friend's meet to enjoy.
                @foreach (var kheech in Model.ActiveKheechEvents)
                {
                <li class="offset-sm-1 col-sm-10">
                    <a href="@Url.RouteUrl("KheechDetails", new { id = kheech.Id})">
                        @kheech.EventName.Humanize() at @kheech.Location.Name.Humanize() - @kheech.StartDate.Humanize()
                    </a>
                </li>
                }
            </ul>
        }
    </div>
    <div class="row">
        <div class="card col-sm-4 kheech-schedule">
            <div class="card-body">
                <h5 class="card-title"><a href="@Url.RouteUrl("ScheduleMeeting")">Start Scheduling</a></h5><hr />
                <h6 class="card-subtitle mb-2 text-muted">Recent Kheeches</h6>
                <p>
                    @foreach (var kheech in Model.RecentSchedules)
                    {
                    <a href="@Url.RouteUrl("KheechDetails", new { id = kheech.Id})">
                        <small>@kheech.EventName.Humanize() at @kheech.Location.Name.Humanize()</small>
                    </a><br />
                    }
                </p>
            </div>
        </div>
        <div class="card col-sm-4 kheech-friend">
            <div class="card-body">
                <h5 class="card-title"><a href="@Url.RouteUrl("ScheduleMeeting")">See your connection with friends</a></h5><hr />
                <h6 class="card-subtitle mb-2 text-muted">Favourite friends</h6>
                <p>
                    @foreach (var friend in Model.RecentFriends)
                    {
                    <a href="@Url.RouteUrl("KheechDetails", new { id = friend.KheechEvent.Id})">
                        <small>@friend.KheechEvent.EventName.Humanize() at @friend.KheechEvent.Location.Name.Humanize()</small>
                    </a><br />
                    }
                </p>
            </div>
        </div>
            <div class="card col-sm-4 kheech-moments">
            <div class="card-body">
                <h5 class="card-title"><a href="@Url.RouteUrl("MomentsHome")">Let's enjoy some Kheech's Moments</a></h5><hr />
                <h6 class="card-subtitle mb-2 text-muted">Recent memories</h6>
                <p>
                    @foreach (var moment in Model.RecentMoments)
                    {
                    <a href="@Url.RouteUrl("MomentsDetail", new { id = moment.Id})">
                        <small>@moment.KheechEvent.EventName.Humanize() at 
                               @moment.KheechEvent.Location.Name.Humanize() on 
                               @moment.KheechEvent.StartDate.ToString("dddd, dd MMMM")
                        </small>
                    </a><br />
                    }
                </p>
            </div>
                
            </div>
        </div>
</div>