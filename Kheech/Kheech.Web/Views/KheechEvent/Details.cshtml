@using Humanizer
@using Microsoft.AspNet.Identity
@model Kheech.Web.Models.KheechEvent

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="container">
                @if (User.Identity.GetUserId() == @Model.ApplicationUserId)
                {
                    //if this is the user who created the kHEECH, show the kheech edit page here
                }
                else
                {
                <div class="row">
                    <div class="col-sm-4 avatar-circle">
                        <span class="initials">@Model.ApplicationUser.FirstName.First()@Model.ApplicationUser.LastName.First()</span>
                    </div>
                    <div class="avatar-comment col-md-8 text-center">
                        <h3> @Model.StartDate.DayOfWeek </h3>
                        <h3> @Model.StartDate.Humanize() </h3>
                    </div>
                </div>
                <div class="row">
                    @foreach (var kheechUsers in Model.KheechUsers)
                    {
                        <div class="col-sm-12">
                            
                        </div>
                     }
                </div>
                //include code to show who accepted and who dint
                <div class="row">
                    <div class="col-sm-6">
                        //ACCEPT CHECKBOX HERE
                    </div>
                    <div class="col-md-6">
                        //not accept checkbox here
                    </div>
                </div>
                }
            </div>
        </div>
        <div class="col-sm-4">
            <p> Here is what going on: </p>
            @foreach (var comment in Model.KheechComments)
            {
                <div class="row kheech-comments">
                    <div class="avatar-circle col-sm-3">
                        <span class="initials">@comment.KheechEvent.ApplicationUser.FirstName.First()@comment.KheechEvent.ApplicationUser.LastName.First()</span>
                    </div>
                    <p class="avatar-comment offset-2 col-sm-9">
                        @comment.KheechEvent.ApplicationUser.FirstName added: <br>
                        <small> @comment.Discussion </small>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
