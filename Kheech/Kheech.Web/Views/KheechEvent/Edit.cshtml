@model Kheech.Web.ViewModels.KheechEditViewModels

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>KheechEvent</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KheechEvent.Id)
    @Html.HiddenFor(model => model.KheechEvent.ApplicationUserId)
    @Html.HiddenFor(model => model.KheechEvent.LocationId)

    <div class="form-group">
        @Html.LabelFor(model => model.KheechEvent.EventName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.KheechEvent.EventName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KheechEvent.EventName, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.WhereToMeet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LocationId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KheechEvent.LocationId, "", new { @class = "text-danger" })
            </div>
        </div>*@
    <div class="form-group">
        @Html.LabelFor(model => model.KheechEvent.LocationId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.WhereToMeet, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.WhereToMeet, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KheechEvent.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.KheechEvent.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KheechEvent.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WhoToMeet, htmlAttributes: new { @class = "control-label col-md-2" })
        @if (Model.Friends.Count == 0)
        {
            @Html.TextBoxFor(m => m.WhoToMeet, new { @readonly = "readonly", @class = "form-control", @placeholder = "You do not have friends yet" })
        }
        else
        {
            @Html.DropDownListFor(m => m.WhoToMeet,
                                                         new SelectList(Model.Friends, "Id", "Name"), new { @class = "form-control" })
        }
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.KheechEvent.GroupId, "GroupId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("GroupId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KheechEvent.GroupId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KheechEvent.IsGroupEvent, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.KheechEvent.IsGroupEvent)
                @Html.ValidationMessageFor(model => model.KheechEvent.IsGroupEvent, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

