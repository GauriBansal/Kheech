@model Kheech.Web.ViewModels.ScheduleViewModel
@{
    ViewBag.Title = "Schedule";
}

<form action="@Url.RouteUrl("ScheduleMeetingPost", new { id = 1})" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Find a suitable time</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.EventName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.EventName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WhenToMeet, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                    <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1" />
                    <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                @*@Html.EditorFor(m => m.WhenToMeet, new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WhoToMeet, new { @class = "col-md-2 control-label" })
            @if (Model.Friends == null)
                {
                    @Html.EditorFor(m => m.WhoToMeet, new { @readonly = "readonly", @class = "form-control", @placeholder="You do not have friends yet" })
                }
            else
                {
                    foreach (var friend in Model.Friends)
                    {
                        @Html.DropDownListFor(m => m.RecipientId,
                                       new SelectList(Model.ApplicationUser.FirstName, "Key", "Value", Model.RecipientId))
                    }
                }
            </select>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WhereToMeet, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.WhereToMeet, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Send Schedule</button>
            </div>
        </div>
    </fieldset>
</form>
@section scripts
{
    <script type="text/javascript">
        $(function () {
             $('#datetimepicker1').datetimepicker();
        });
    </script>
}
