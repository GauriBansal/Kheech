@model Kheech.Web.ViewModels.MomentsUploadViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.RouteUrl("HomePage")">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.RouteUrl("KheechDetails", new { id = Model.KheechId})">Kheech @Model.KheechId</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">CreateMoment</li>
    </ol>
</nav>

<form action="@Url.RouteUrl("MomentsCreatePost", new { id = Model.KheechId})" method="post" enctype="multipart/form-data" class="form-control form-container">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.KheechId)
    <fieldset>
        <legend>Create a Moment</legend><hr />
        <div class="form-group">
            @Html.LabelFor(a => a.File, htmlAttributes: new { @class = "col-sm-12 control-label", @for = "imageFile" })
            <div class="col-12">
                @Html.TextBoxFor(a => a.File, new { @class = "form-control", id = "imageFile", type = "file", accept = "*" })
                @Html.ValidationMessageFor(a => a.File, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>@ViewBag.Message</div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-12 control-label", @for = "imageDesc" })
            <div class="col-12">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "imageDesc" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-6 offset-2 offset-md-3">
                <button class="btn btn-primary" type="submit">Upload</button>
            </div>
        </div>
    </fieldset>
</form>
