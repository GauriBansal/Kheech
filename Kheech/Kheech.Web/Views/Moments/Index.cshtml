@model IEnumerable<Kheech.Web.Models.Moment>
 @using Humanizer

@{
    ViewBag.Title = "Index";
}

<div class="container">
  <div class="row">
    @foreach (var moment in Model)
    {
      <div class="col-sm-4 card">
        <a href="@Url.RouteUrl("MomentsDetail", new { id = moment.Id})">
          <img class="card-img-top" src="@moment.Capture" alt="@moment.KheechEvent.EventName">
        </a>
        <div class="card-body">
          <p>Relive the Kheech 
            <a href="@Url.RouteUrl("KheechDetails", new { id = moment.KheechEvent.Id})" class="card-title btn btn-primary">
               @moment.KheechEvent.EventName at @moment.KheechEvent.Location.Name
            </a>
          </p>
        </div>
      </div>
    }
  </div>
</div>
